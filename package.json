    "generate:all": "pnpm ts-node scripts/getAllShortcuts.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --check \"**/*.{mjs,js,json,md,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{mjs,js,json,md,ts,yml}\"",
